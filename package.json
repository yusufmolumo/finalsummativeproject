{
    "name": "dish-a-day",
    "version": "1.0.0",
    "description": "A web app to explore global cuisines, discover recipes, and share culinary creations.",
    "main": "api/server.js",
    "scripts": {
      "start": "node api/server.js",
      "server": "json-server --watch api/db.json --port 3000",
      "build-css": "sass scss/main.scss css/main.css --no-source-map",
      "watch-css": "sass --watch scss/main.scss css/main.css --no-source-map",
      "dev": "npm run build-css && npm run start",
      "test": "echo \"No tests specified\" && exit 0"
    },
    "keywords": ["recipe", "cuisine", "web-app", "json-server", "sass"],
    "author": "Yusuf Molumo <y.molumo@alustudent.com> & Belinda Larose",
    "license": "MIT",
    "dependencies": {
      "json-server": "^0.17.4",
      "sass": "^1.77.8"
    },
    "devDependencies": {},
    "repository": {
      "type": "git",
      "url": "https://github.com/yusufmolumo/dish-a-day.git"
    },
    "bugs": { "url": "https://github.com/yusufmolumo/dish-a-day/issues" },
    "homepage": "https://github.com/yusufmolumo/dish-a-day#readme"
  }